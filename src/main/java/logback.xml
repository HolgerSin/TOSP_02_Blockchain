<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger{36} - %highlight(%msg%n)</pattern>
    </encoder>
  </appender>

<!-- 
  <logger name="com.github.teamofstudents.tosp_02_blockchain.Block" level="DEBUG" />
  <logger name="com.github.teamofstudents.tosp_02_blockchain.App" level="DEBUG" />
  <logger name="com.github.teamofstudents.tosp_02_blockchain.MiningThread" level="DEBUG" /> -->

  <root level="trace">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>